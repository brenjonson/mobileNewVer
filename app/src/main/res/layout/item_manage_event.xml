<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/eventNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="ชื่อกิจกรรม"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eventDateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="01-01-2023" />

    <TextView
        android:id="@+id/eventCategoryTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="กีฬา" />

    <TextView
        android:id="@+id/registrationCountTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="10/50" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/editButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="แก้ไข"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/viewRegistrationsButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_marginStart="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="ดูรายชื่อผู้ลงทะเบียน"
            android:src="@android:drawable/ic_menu_myplaces" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:layout_marginStart="4dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="ลบ"
            android:src="@android:drawable/ic_menu_delete" />
    </LinearLayout>
</LinearLayout>